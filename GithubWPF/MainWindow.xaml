<Window x:Class="GithubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GithubWPF"
        mc:Ignorable="d"
        Title="GitHub WPF" Height="450" Width="900"
        Background="#F3F4F7">

    <Window.Resources>
        <!-- Árnyék stílus -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="15"
                          Direction="270"
                          ShadowDepth="4"
                          Color="#88000000"
                          Opacity="0.25"/>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Fejléc -->
        <StackPanel Margin="0 0 0 25">
            <TextBlock Text="Üdvözöl a GitHub WPF!"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2B2B2B"/>
            <TextBlock Text="Kezelőfelület GitHub műveletekhez"
                       FontSize="16"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Tartalom kártyák -->
        <WrapPanel Grid.Row="1" ItemWidth="260" ItemHeight="160">

            <!-- Repozitóriók -->
            <Border Background="White" CornerRadius="12" Margin="10" Padding="20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Repozitóriók"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Saját GitHub tárolók listája"
                               Foreground="#666" Margin="0 5 0 15"/>
                    <Button Content="Megnyitás" Width="120" Height="34"/>
                </StackPanel>
            </Border>

            <!-- Felhasználók -->
            <Border Background="White" CornerRadius="12" Margin="10" Padding="20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Felhasználók"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="GitHub felhasználók keresése"
                               Foreground="#666" Margin="0 5 0 15"/>
                    <Button Content="Megnyitás" Width="120" Height="34"/>
                </StackPanel>
            </Border>

            <!-- Beállítások -->
            <Border Background="White" CornerRadius="12" Margin="10" Padding="20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Beállítások"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Tokenek, API hozzáférés"
                               Foreground="#666" Margin="0 5 0 15"/>
                    <Button Content="Megnyitás" Width="120" Height="34"/>
                </StackPanel>
            </Border>

        </WrapPanel>

    </Grid>
</Window>
